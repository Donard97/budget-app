<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="header d-flex justify-content-between align-items-end">
  <div class="container d-flex justify-content-between align-items-end">
      <div class="m-2">
      <%= link_to root_path do %>
	      <span class="text-light">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
          </svg>
        </span>
      <% end %>
      </div>
      <div>
        <h5>LOGIN</h5>
      </div>
      <div class="actions m-2">
        <%= f.submit "Log in", class: "log-btn" %>
      </div>
      </div>
  </div>
  <div class="container log mt-3">
  <div class="field m-1">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="field m-1">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
  </div>

  </div>
  
<% end %>

<div class="text-center pwd-link">
<%= render "devise/shared/links" %>
</div>

