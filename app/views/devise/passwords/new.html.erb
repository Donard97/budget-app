<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="header d-flex justify-content-between align-items-end">  
    <div class="m-2">
      <%= link_to root_path do %>
	      <span class="text-light">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
          </svg>
        </span>
      <% end %>
      </div>
      <div>
        <h3>RESET PASSWORD</h3>
      </div>
      <div class="actions m-2">
        <%= f.submit "Reset", class: "log-btn" %>
      </div>
  </div>
  
  <div class="container mt-3">
  <div class="field m-1">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"  %>
  </div>

</div>
<% end %>

<div class="text-center">
<%= render "devise/shared/links" %>
</div>
