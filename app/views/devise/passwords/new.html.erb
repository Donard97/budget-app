<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="header d-flex justify-content-between align-items-end">  
    <div class="m-2">
      <%= link_to root_path do %>
	      <span class="text-light">Back</span>
      <% end %>
      </div>
      <div>
        <h3>RESET PASSWORD</h3>
      </div>
      <div class="actions m-2">
        <%= f.submit "Reset", class: "log-btn" %>
      </div>
  </div>
  
  <div class="mt-3">
  <div class="field m-1">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"  %>
  </div>

</div>
<% end %>

<div class="text-center">
<%= render "devise/shared/links" %>
</div>
