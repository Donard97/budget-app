<div>
  <%= form_with(model: @group) do |form| %>
    <div class="m-2">
      <%= form.text_field :name, autofocus: true, placeholder: "Name", class: "form-control", required: true %>
    </div>
    <div class="m-2">
      <%= form.url_field :icon, placeholder: "Icon", class: "form-control", required: true %>
    </div>
    <div>
      <%= form.submit "Save", class: "button save has-text-white" %>
    </div>
  <% end %>
</div>